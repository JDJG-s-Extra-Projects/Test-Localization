{
    "convert_temperature": {
        "name": "convert_temperature",
        "description": "一個可以轉換溫度至不同溫標的指令",
        "options": {
            "temp_system": {
                "name": null,
                "description": null
            },
            "temperature": {
                "name": null,
                "description": null
            }
        },
        "embeds": [
            {
                "title": "溫度：",
                "fields": [
                    {
                        "name": "攝氏度：",
                        "value": "{temp_celsius} °C"
                    },
                    {
                        "name": "華氏度",
                        "value": "{temp_fahrenheit} °F"
                    },
                    {
                        "name": "開爾文：",
                        "value": "{temp_kelvin} K"
                    },
                    {
                        "name": "蘭氏溫標：",
                        "value": "{temp_rankine} °R"
                    }
                ],
                "footer": {
                    "text": "請選擇： {temp_system_value}"
                }
            }
        ]
    }
}